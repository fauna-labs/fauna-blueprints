CreateFunction({
  name: 'validate_password',
  body: Query(Lambda(['password'],
    If(
      GTE(Length(Var('password')), 8),
      // If it's valid, we continue with the original statement
      true,
      // Else we Abort!
      Abort('Invalid password, please provided at least 8 chars')
    ))),
  role: 'server'
})
